         <backgroundColor>00000000</backgroundColor>
         <color>afb0b6</color>
         <fontPath>./_inc/fonts/impact.ttf</fontPath>
	     <fontSize>0.04</fontSize>
         <zIndex>45</zIndex>	     
      </text>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
